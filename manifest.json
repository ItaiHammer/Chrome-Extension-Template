{
    "name": "Chrome Extension Template",
    "description": "This is the description",
    "version": "1",
    "manifest_version": 2,

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    
    "background": [
        {
            "scripts":["background.js"]
        }
    ]
}